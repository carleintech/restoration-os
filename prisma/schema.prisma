model SundayMessage {
  id          String   @id @default(uuid()) @db.Uuid
  weekOf      DateTime @unique @db.Date
  title       String
  subtitle    String?
  summary     String?
  themeTags   String[] @default([])

  // Optional sermon video teaser (YouTube/Vimeo URL)
  teaserUrl   String?
  bannerImage String?

  // Linked scripture reference (reuses BibleBook + verse range)
  bookId      Int
  book        BibleBook @relation(fields: [bookId], references: [id])
  chapter     Int
  verseFrom   Int?
  verseTo     Int?

  // Publish control
  status      String   @default("draft") // draft | published
  publishedAt DateTime? @db.Timestamptz(6)

  createdBy   String   @db.Uuid
  creator     profiles @relation(fields: [createdBy], references: [id])
  createdAt   DateTime @default(now()) @db.Timestamptz(6)
  updatedAt   DateTime @default(now()) @db.Timestamptz(6)

  prepPrompts SundayPrepPrompt[]
  responses   SundayPrepResponse[]

  @@schema("public")
}

model SundayPrepPrompt {
  id        String @id @default(uuid()) @db.Uuid
  messageId String @db.Uuid
  order     Int

  type      String // reflection | prayer | action
  text      String

  message SundayMessage @relation(fields: [messageId], references: [id], onDelete: Cascade)

