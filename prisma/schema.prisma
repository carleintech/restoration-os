enum NotificationCategory {
  SUNDAY_PREP
  BIBLE_DEVOTION
  PRAYER_PRAISE
  BIRTHDAY
  GROUP
  TRIP
  ADMIN

  @@schema("public")
}

enum NotificationPriority {
  P0_CRITICAL
  P1_HIGH
  P2_NORMAL
  P3_LOW

  @@schema("public")
}

enum NotificationChannel {
  IN_APP
  PUSH
  EMAIL

  @@schema("public")
}

enum NotificationStatus {
  PENDING
  SENT
  DELIVERED
  READ
  DISMISSED
  FAILED

  @@schema("public")
}

model Notification {
  id          String               @id @default(uuid()) @db.Uuid
  userId      String               @db.Uuid
  category    NotificationCategory
  priority    NotificationPriority @default(P2_NORMAL)
  channel     NotificationChannel  @default(IN_APP)
  status      NotificationStatus   @default(PENDING)
  title       String
  body        String
  deepLink    String?
  imageUrl    String?
  dedupeKey   String?
  sentAt      DateTime?            @db.Timestamptz(6)
  readAt      DateTime?            @db.Timestamptz(6)
  dismissedAt DateTime?            @db.Timestamptz(6)
  expiresAt   DateTime?            @db.Timestamptz(6)
  data        Json?
  createdAt   DateTime             @default(now()) @db.Timestamptz(6)

  @@index([userId, status])
  @@index([userId, createdAt])
  @@index([dedupeKey])
  @@schema("public")
}

model UserNotificationPreferences {
  id     String @id @default(uuid()) @db.Uuid
  userId String @unique @db.Uuid

  // Category toggles
  sundayPrepEnabled    Boolean @default(true)
  bibleDevotionEnabled Boolean @default(true)
  prayerPraiseEnabled  Boolean @default(true)
  birthdayEnabled      Boolean @default(true)
  groupEnabled         Boolean @default(true)
  tripEnabled          Boolean @default(true)
  adminEnabled         Boolean @default(true)

  // Channel preferences
  pushEnabled  Boolean @default(true)
  emailEnabled Boolean @default(false)

  // Quiet hours (0-23 hour values)
  quietHoursEnabled Boolean @default(true)
  quietHoursStart   Int     @default(22)
  quietHoursEnd     Int     @default(7)

  // Digest
  digestEnabled   Boolean @default(false)
  digestFrequency String  @default("daily")
  digestTime      Int     @default(8)

  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @default(now()) @db.Timestamptz(6)

  @@schema("public")
}

