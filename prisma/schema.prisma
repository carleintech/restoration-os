  sundayMessages SundayMessage[]

  @@schema("public")
}

model BibleVerse {
  id        Int      @id @default(autoincrement())
  bookId    Int
  chapter   Int
  verse     Int
  text      String

  book BibleBook @relation(fields: [bookId], references: [id])

  @@index([bookId, chapter])
  @@schema("public")
}

